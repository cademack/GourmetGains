<%= form_for @exercise do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </p>
  
  <p>
    <%= f.label :picture %><br>
    <%= f.text_area :picture %>
  </p>
  
  <p>
    <%= f.label :tags %><br>
    <%= f.text_area :tags %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

<%= link_to 'Back', exercises_path %>